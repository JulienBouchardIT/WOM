<Window x:Class="WOM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WOM"
        mc:Ignorable="d"
        Title="Window Order Manager - 0.0" 
        Height="500" Width="300" ResizeMode="NoResize"
        Icon="layer.ico"
        Closing="Window_Closing"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <ListBox x:Name="listBox" Grid.Row="0" BorderThickness="0" 
            ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="1" Width="300" Height="40" Click="Apply" ClickMode="Press" Foreground="White" FontSize="20" Background="#15B2FF"  FontWeight="Bold">Apply</Button>
    </Grid>
</Window>
