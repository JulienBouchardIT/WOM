<Window x:Class="WOM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WOM"
        mc:Ignorable="d"
        Title="Window Order Manager - 0.0" 
        Height="500" Width="300" ResizeMode="NoResize"
        Icon="layer.ico"
        Closing="Window_Closing"
        AllowsTransparency="True" WindowStyle="None"
        >
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition />
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="White" BorderThickness="0" CornerRadius="8,8,0,0">
            <Grid MouseDown="Window_Drag">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <Image Width="25" Margin="2">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="300" UriSource="layer.ico" />
                    </Image.Source>
                </Image>
                <Label Grid.Column="1" Margin="0,4,0,0">Window Order Manager 0.0</Label>
                <Button Grid.Column="2" BorderThickness="0" Background="Transparent" Click="Actualize">Act.</Button>
                <Button Grid.Column="3" BorderThickness="0" Background="Transparent" Click="OpenWiki">?</Button>
                <Button Grid.Column="4" BorderThickness="0" Background="Transparent" Click="CloseButton">X
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="0,8,0,0"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <ListBox x:Name="listBox" Grid.Row="1" BorderThickness="0"  Margin="0,-1,0,0"
            ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Background="White" BorderThickness="0" IsEnabled="{Binding isIcon, Mode=OneTime}">T</Button>
                        <ToggleButton Grid.Column="1" Background="White" BorderThickness="0" IsEnabled="{Binding isIcon, Mode=OneTime}" IsChecked="{Binding fix, Mode=TwoWay}">L</ToggleButton>
                        <TextBlock Grid.Column="2" Text="{Binding name}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Click="Reset" Grid.Column="0" Background="#15B2FF" BorderBrush="White" BorderThickness="0,0,1,2.5" FontSize="20" Foreground="White" FontWeight="Bold">reset</Button>
            <Button Click="Adjust" Grid.Column="1" Background="#15B2FF" BorderBrush="White" BorderThickness="1,0,0,2.5" FontSize="20" Foreground="White" FontWeight="Bold">adjust</Button>
        </Grid>

        <Button Grid.Row="3" Width="300" Height="40" BorderThickness="0" Click="Apply" ClickMode="Press" Foreground="White" FontSize="20" Background="#15B2FF" FontWeight="Bold">APPLY
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="0,0,8,8"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
