<Window x:Class="WOM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WOM"
        mc:Ignorable="d"
        Title="Window Order Manager - 0.0" 
        Height="500" Width="300" ResizeMode="NoResize"
        Icon="layer.ico"
        Closing="Window_Closing"
        AllowsTransparency="True" WindowStyle="None"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" MouseDown="Window_Drag">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Image Width="25" Margin="2">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="300" UriSource="layer.ico" />
                </Image.Source>
            </Image>
            <Label Grid.Column="1" Margin="0,4,0,0">Window Order Manager 0.0</Label>
            <Button Grid.Column="2" BorderThickness="0" Background="White">A</Button>
            <Button Grid.Column="3" BorderThickness="0" Background="White">?</Button>
            <Button Grid.Column="4" BorderThickness="0" Background="White">X</Button>
        </Grid>

        <ListBox x:Name="listBox" Grid.Row="1" BorderThickness="0" 
            ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="2" Width="300" Height="40" BorderThickness="0" Click="Apply" ClickMode="Press" Foreground="White" FontSize="20" Background="#15B2FF" FontWeight="Bold">Apply</Button>
    </Grid>
</Window>
