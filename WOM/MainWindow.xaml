<Window x:Class="WOM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WOM"
        mc:Ignorable="d"
        Title="Window Order Manager - 0.0" 
        Height="500" Width="300" ResizeMode="NoResize"
        Icon="layer.ico"
        Closing="Window_Closing"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Background="White" FontWeight="Bold">WALLPAPER</Label>
        <ListBox Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Stretch" BorderThickness="0" Margin="0,-10,0,0" x:Name="listBox"/>
        <Button Grid.Row="2" Width="200" Height="30" Click="AddWindow" ClickMode="Press">+ Add window</Button>
        <Button Grid.Row="2" Grid.Column="1" Width="200" Height="30" Click="Apply" ClickMode="Press">Apply</Button>
    </Grid>
</Window>
